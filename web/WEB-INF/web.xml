<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    <!--注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.wetor.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.wetor.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--发帖-->
    <servlet>
        <servlet-name>posting</servlet-name>
        <servlet-class>com.wetor.servlet.PostingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>posting</servlet-name>
        <url-pattern>/posting</url-pattern>
    </servlet-mapping>

    <!--主页-->
    <servlet>
        <servlet-name>blogPage</servlet-name>
        <servlet-class>com.wetor.servlet.BlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>blogPage</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <!--主页-->
    <servlet>
        <servlet-name>adminPage</servlet-name>
        <servlet-class>com.wetor.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <!--帖子-->
    <servlet>
        <servlet-name>postPage</servlet-name>
        <servlet-class>com.wetor.servlet.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>postPage</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <!--修改帖子-->
    <servlet>
        <servlet-name>editPage</servlet-name>
        <servlet-class>com.wetor.servlet.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editPage</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <!--提示信息-->
    <servlet>
        <servlet-name>messagePage</servlet-name>
        <servlet-class>com.wetor.servlet.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>messagePage</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
</web-app>
